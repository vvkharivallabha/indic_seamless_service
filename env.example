# Environment Configuration for Indic Seamless Service
# Copy this file to .env and update with your values

# HuggingFace Authentication (Required for gated models)
# Get your token from: https://huggingface.co/settings/tokens
# HF_TOKEN=your_huggingface_token_here

# Service Configuration
# DEBUG=true
# PORT=8000
# HOST=0.0.0.0

# Model Configuration
# MODEL_NAME=ai4bharat/indic-seamless
# MODEL_CACHE_DIR=./models
# DEVICE=auto

# Logging Configuration
# LOG_LEVEL=INFO
# LOG_FILE=logs/service.log

# Performance Configuration
# MAX_WORKERS=4
# TIMEOUT=300

# AWS Configuration (for deployment)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_DEFAULT_REGION=us-east-1

# SageMaker Configuration
# SAGEMAKER_ROLE=your_sagemaker_role_arn
# SAGEMAKER_INSTANCE_TYPE=ml.m5.large

# Model Configuration (optional overrides)
# MODEL_NAME=ai4bharat/indic-seamless
# TRUST_REMOTE_CODE=true

# Audio Processing (optional overrides)
# MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
# TARGET_SAMPLE_RATE=16000 